	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<encoding>GBK</encoding>
					<charset>GBK</charset>
				</configuration>
				<reportSets>
					<reportSet>
